{
  "id": "daily-calorie-needs-calculator",
  "slug": "daily-calorie-needs-calculator",
  "category": "health",
  "engine": "function",
  "calculationId": "calculateDailyCalorieNeeds",
  "tags": ["health", "tdee", "daily-calories", "calorie-needs", "weight-loss", "weight-gain"],
  "inputs": [
    {
      "name": "sex",
      "type": "select",
      "options": [
        { "value": "male", "label": "Male" },
        { "value": "female", "label": "Female" }
      ],
      "defaultValue": "male"
    },
    {
      "name": "age",
      "type": "number",
      "step": 1,
      "defaultValue": 30
    },
    {
      "name": "height",
      "type": "number",
      "step": 1,
      "defaultValue": 175
    },
    {
      "name": "heightUnit",
      "type": "select",
      "options": [
        { "value": "cm", "label": "Centimeters (cm)" },
        { "value": "ft+in", "label": "Feet and Inches (ft+in)" }
      ],
      "defaultValue": "cm"
    },
    {
      "name": "heightFeet",
      "type": "number",
      "step": 1,
      "defaultValue": 5,
      "visibleIf": {
        "field": "heightUnit",
        "value": "ft+in"
      }
    },
    {
      "name": "heightInches",
      "type": "number",
      "step": 1,
      "defaultValue": 10,
      "visibleIf": {
        "field": "heightUnit",
        "value": "ft+in"
      }
    },
    {
      "name": "weight",
      "type": "number",
      "step": 1,
      "defaultValue": 70
    },
    {
      "name": "weightUnit",
      "type": "select",
      "options": [
        { "value": "kg", "label": "Kilograms (kg)" },
        { "value": "lb", "label": "Pounds (lb)" }
      ],
      "defaultValue": "kg"
    },
    {
      "name": "activityLevel",
      "type": "select",
      "options": [
        { "value": "sedentary", "label": "Sedentary (1.2x) - Little to no exercise, desk job" },
        { "value": "light", "label": "Lightly Active (1.375x) - Light exercise 1-3 days/week" },
        { "value": "moderate", "label": "Moderately Active (1.55x) - Moderate exercise 3-5 days/week" },
        { "value": "very active", "label": "Very Active (1.725x) - Hard exercise 6-7 days/week" },
        { "value": "athlete", "label": "Athlete (1.9x) - Very hard exercise, physical job, or training twice/day" }
      ],
      "defaultValue": "moderate"
    },
    {
      "name": "goal",
      "type": "select",
      "options": [
        { "value": "maintain", "label": "Maintain Weight" },
        { "value": "lose_0_25kg_week", "label": "Lose 0.25 kg/week (Mild Deficit)" },
        { "value": "lose_0_5kg_week", "label": "Lose 0.5 kg/week (Moderate Deficit)" },
        { "value": "gain_0_25kg_week", "label": "Gain 0.25 kg/week (Mild Surplus)" },
        { "value": "gain_0_5kg_week", "label": "Gain 0.5 kg/week (Moderate Surplus)" }
      ],
      "defaultValue": "maintain",
      "optional": true
    }
  ],
  "outputs": [
    {
      "name": "bmr"
    },
    {
      "name": "tdee"
    },
    {
      "name": "goalCalories"
    },
    {
      "name": "goalDescription"
    },
    {
      "name": "activityDescription"
    },
    {
      "name": "activityMultiplier"
    },
    {
      "name": "goalDelta"
    },
    {
      "name": "insights"
    }
  ],
  "defaults": {
    "sex": "male",
    "age": 30,
    "height": 175,
    "heightUnit": "cm",
    "weight": 70,
    "weightUnit": "kg",
    "activityLevel": "moderate",
    "goal": "maintain"
  },
  "relatedIds": ["bmr-calculator", "macronutrient-calculator", "bmi-calculator", "calories-burned-calculator", "water-intake-calculator"],
  "isEnabled": true,
  "seo": {
    "title": "Daily Calorie Needs Calculator (TDEE) â€“ Calories to Maintain or Lose Weight",
    "description": "Calculate your daily calorie needs (TDEE) based on age, height, weight, and activity level. Get calorie targets for weight maintenance, loss, or gain.",
    "schema": {
      "applicationSubCategory": "HealthCalculator",
      "featureList": [
        "TDEE estimation",
        "Weight goal calorie targets",
        "Activity multiplier support"
      ],
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      }
    }
  }
}

