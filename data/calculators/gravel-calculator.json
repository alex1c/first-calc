    {
      "name": "unit",
      "type": "select",
      "options": [
        { "value": "meters", "label": "Meters (m³)" },
        { "value": "feet", "label": "Feet (ft³)" }
      ],
      "defaultValue": "meters"
    },
    {
      "name": "includeWaste",
      "type": "select",
