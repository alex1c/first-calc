{
  "id": "ideal-weight-calculator",
  "slug": "ideal-weight-calculator",
  "category": "health",
  "engine": "function",
  "calculationId": "calculateIdealWeight",
  "tags": ["health", "ideal-weight", "healthy-weight", "height-weight", "body-weight"],
  "inputs": [
    {
      "name": "sex",
      "type": "select",
      "options": [
        { "value": "male", "label": "Male" },
        { "value": "female", "label": "Female" }
      ],
      "defaultValue": "male"
    },
    {
      "name": "height",
      "type": "number",
      "step": 1,
      "defaultValue": 175
    },
    {
      "name": "heightUnit",
      "type": "select",
      "options": [
        { "value": "cm", "label": "Centimeters (cm)" },
        { "value": "ft+in", "label": "Feet and Inches (ft+in)" }
      ],
      "defaultValue": "cm"
    },
    {
      "name": "heightFeet",
      "type": "number",
      "step": 1,
      "defaultValue": 5,
      "visibleIf": {
        "field": "heightUnit",
        "value": "ft+in"
      }
    },
    {
      "name": "heightInches",
      "type": "number",
      "step": 1,
      "defaultValue": 10,
      "visibleIf": {
        "field": "heightUnit",
        "value": "ft+in"
      }
    },
    {
      "name": "frameSize",
      "type": "select",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "defaultValue": "medium",
      "optional": true
    }
  ],
  "outputs": [
    {
      "name": "devineWeight"
    },
    {
      "name": "devineWeightLb"
    },
    {
      "name": "robinsonWeight"
    },
    {
      "name": "robinsonWeightLb"
    },
    {
      "name": "millerWeight"
    },
    {
      "name": "millerWeightLb"
    },
    {
      "name": "minWeight"
    },
    {
      "name": "maxWeight"
    },
    {
      "name": "minWeightLb"
    },
    {
      "name": "maxWeightLb"
    },
    {
      "name": "idealRangeKg"
    },
    {
      "name": "idealRangeLb"
    },
    {
      "name": "insights"
    }
  ],
  "defaults": {
    "sex": "male",
    "height": 175,
    "heightUnit": "cm",
    "heightFeet": 5,
    "heightInches": 10,
    "frameSize": "medium"
