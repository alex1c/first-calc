{
  "id": "inflation-adjustment",
  "category": "finance",
  "slug": "inflation-adjustment",
  "inputs": [
    {
      "name": "amount",
      "type": "number",
      "unit": "₽",
      "min": 0
    },
    {
      "name": "startYear",
      "type": "number",
      "unit": "",
      "min": 1900,
      "max": 2100,
      "defaultValue": 2000
    },
    {
      "name": "endYear",
      "type": "number",
      "unit": "",
      "min": 1900,
      "max": 2100,
      "defaultValue": 2024
    },
    {
      "name": "inflationRate",
      "type": "number",
      "unit": "%",
      "min": 0,
      "max": 100,
      "defaultValue": 3
    }
  ],
  "outputs": [
    {
      "name": "adjustedAmount"
    },
    {
      "name": "totalInflation"
    }
  ],
  "formula": "(function() { const years = Math.abs(endYear - startYear); const totalInflation = Math.pow(1 + inflationRate / 100, years) - 1; const adjusted = amount * (1 + totalInflation); return { adjustedAmount: adjusted, totalInflation: totalInflation * 100 }; })()",
  "variables": {
    "amount": "Исходная денежная сумма",
    "startYear": "Год исходной суммы",
    "endYear": "Целевой год для корректировки",
    "inflationRate": "Средняя годовая инфляция"
  },
  "relatedIds": [
    "roi-calculator",
    "compound-interest"
  ],
  "standardIds": []
}




