{
  "id": "investment-calculator",
  "slug": "investment-calculator",
  "category": "finance",
  "engine": "function",
  "calculationId": "calculateInvestment",
  "tags": ["finance", "investment", "compound-interest", "savings", "interest", "calculator"],
  "inputs": [
    {
      "name": "initialInvestment",
      "type": "number",
      "min": 0,
      "max": 10000000,
      "step": 100,
      "defaultValue": 10000
    },
    {
      "name": "monthlyContribution",
      "type": "number",
      "min": 0,
      "max": 100000,
      "step": 1,
      "defaultValue": 500
    },
    {
      "name": "interestRate",
      "type": "number",
      "min": 0,
      "max": 30,
      "step": 0.01,
      "defaultValue": 5
    },
    {
      "name": "investmentPeriod",
      "type": "number",
      "min": 1,
      "max": 100,
      "step": 1,
      "defaultValue": 10
    },
    {
      "name": "compoundingFrequency",
      "type": "select",
      "options": [
        { "value": "monthly", "label": "Monthly" },
        { "value": "quarterly", "label": "Quarterly" },
        { "value": "annually", "label": "Annually" }
      ],
      "defaultValue": "monthly"
    },
    {
      "name": "interestType",
      "type": "select",
      "options": [
        { "value": "compound", "label": "Compound Interest" },
        { "value": "simple", "label": "Simple Interest" }
      ],
      "defaultValue": "compound"
    },
    {
      "name": "inflationRate",
      "type": "number",
      "min": 0,
      "max": 20,
      "step": 0.1,
      "defaultValue": 0
    },
    {
      "name": "taxRate",
      "type": "number",
      "min": 0,
      "max": 50,
      "step": 0.1,
      "defaultValue": 0
    },
    {
      "name": "monthlyWithdrawal",
      "type": "number",
      "min": 0,
      "max": 100000,
      "step": 1,
      "defaultValue": 0
    }
  ],
  "outputs": [
    {
      "name": "finalValue"
    },
    {
      "name": "totalContributions"
    },
    {
      "name": "totalProfit"
    },
    {
      "name": "profitPercentage"
    },
    {
      "name": "realValue"
    },
    {
      "name": "afterTaxValue"
    },
    {
      "name": "steps"
    }
  ],
  "defaults": {
    "initialInvestment": 10000,
    "monthlyContribution": 500,
    "interestRate": 7,
    "investmentPeriod": 20,
    "compoundingFrequency": "monthly"
  },
  "isEnabled": true
}

