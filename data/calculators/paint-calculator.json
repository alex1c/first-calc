{
  "id": "paint-calculator",
  "slug": "paint-calculator",
  "category": "construction",
  "engine": "function",
  "calculationId": "calculatePaint",
  "tags": ["construction", "paint", "estimator"],
  "inputs": [
    {
      "name": "surfaceType",
      "type": "select",
      "options": [
        { "value": "walls", "label": "Walls" },
        { "value": "ceiling", "label": "Ceiling" },
        { "value": "floor", "label": "Floor" }
      ],
      "defaultValue": "walls"
    },
    {
      "name": "surfaceArea",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": 0.1,
      "defaultValue": 20
    },
    {
      "name": "numberOfCoats",
      "type": "number",
      "min": 1,
      "max": 10,
      "step": 1,
      "defaultValue": 2
    },
    {
      "name": "paintCoverage",
      "type": "number",
      "min": 0,
      "max": 1000,
      "step": 0.1,
      "defaultValue": 10
    },
    {
      "name": "unit",
      "type": "select",
      "options": [
        { "value": "meters", "label": "Meters (m²)" },
        { "value": "feet", "label": "Feet (ft²)" }
      ],
      "defaultValue": "meters"
    },
    {
      "name": "includeWaste",
      "type": "select",
      "options": [
        { "value": "false", "label": "No" },
        { "value": "true", "label": "Yes" }
      ],
      "defaultValue": "false"
    },
    {
      "name": "wasteMargin",
      "type": "number",
      "min": 5,
      "max": 20,
      "step": 1,
      "defaultValue": 10,
      "visibleIf": {
        "field": "includeWaste",
        "value": "true"
      }
    }
  ],
  "outputs": [
    {
      "name": "paintRequired"
    },
    {
      "name": "paintRequiredFormatted"
    },
    {
      "name": "paintPerCoat"
    },
    {
      "name": "paintPerCoatFormatted"
    },
    {
      "name": "paintRequiredWithWaste"
    },
    {
      "name": "paintRequiredWithWasteFormatted"
    },
    {
      "name": "paintRequiredAlternative"
    },
    {
      "name": "paintRequiredAlternativeFormatted"
    },
    {
      "name": "alternativeUnit"
    },
    {
      "name": "explanation"
    },
    {
      "name": "cansEstimate"
    },
    {
      "name": "surfaceArea"
    }
  ],
  "defaults": {
    "surfaceType": "walls",
    "surfaceArea": 20,
    "numberOfCoats": 2,
    "paintCoverage": 10,
    "unit": "meters",
    "includeWaste": "false",
    "wasteMargin": 10
  },
  "relatedIds": ["wall-area-calculator", "primer-calculator", "putty-calculator", "tile-calculator", "laminate-calculator"],
  "isEnabled": true
}

