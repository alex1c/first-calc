  "inputs": [
    {
      "name": "shape",
      "type": "select",
      "options": [
        { "value": "circle", "label": "Circle" },
        { "value": "square", "label": "Square" },
        { "value": "rectangle", "label": "Rectangle" },
        { "value": "triangle", "label": "Triangle" }
      ],
      "defaultValue": "circle"
    },
    {
      "name": "radius",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": "any",
      "visibleIf": {
        "field": "shape",
        "value": "circle"
      }
    },
    {
      "name": "side",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": "any",
      "visibleIf": {
        "field": "shape",
        "value": "square"
      }
    },
    {
      "name": "length",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": "any",
      "visibleIf": {
        "field": "shape",
        "value": "rectangle"
      }
    },
    {
      "name": "width",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": "any",
      "visibleIf": {
        "field": "shape",
        "value": "rectangle"
      }
    },
    {
      "name": "sideA",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": "any",
      "visibleIf": {
        "field": "shape",
        "value": "triangle"
      }
    },
    {
      "name": "sideB",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": "any",
      "visibleIf": {
        "field": "shape",
        "value": "triangle"
      }
    },
    {
      "name": "sideC",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": "any",
      "visibleIf": {
        "field": "shape",
        "value": "triangle"
      }
    }
  ],
  "outputs": [
    {
      "name": "perimeter"
    },
    {
      "name": "formula"
    },
    {
      "name": "shapeName"
    }
  ],
  "defaults": {
    "shape": "circle"
  },
  "isEnabled": true
}

