{
	"id": "personal-loan-calculator",
	"slug": "personal-loan-calculator",
	"category": "finance",
	"engine": "function",
	"calculationId": "calculatePersonalLoan",
	"tags": ["finance", "loans", "personal-loan", "unsecured-loan"],
	"inputs": [
		{
			"name": "loanAmount",
			"type": "number",
			"min": 1000,
			"max": 100000,
			"step": 100
		},
		{
			"name": "interestRate",
			"type": "number",
			"min": 0,
			"max": 36,
			"step": 0.01
		},
		{
			"name": "loanTerm",
			"type": "number",
			"min": 1,
			"max": 7,
			"step": 1
		},
		{
			"name": "originationFee",
			"type": "number",
			"min": 0,
			"max": 10,
			"step": 0.1,
			"defaultValue": 0
		},
		{
			"name": "paymentType",
			"type": "select",
			"options": [
				{ "value": "annuity", "label": "Annuity (Fixed Payment)" },
				{ "value": "differentiated", "label": "Differentiated (Declining Payment)" }
			],
			"defaultValue": "annuity"
		},
		{
			"name": "prepaymentPenalty",
			"type": "number",
			"min": 0,
			"max": 10,
			"step": 0.1,
			"defaultValue": 0
		},
		{
			"name": "latePaymentFee",
			"type": "number",
			"min": 0,
			"max": 100,
			"step": 1,
			"defaultValue": 0
		}
	],
	"outputs": [
		{
			"name": "monthlyPayment"
		},
		{
			"name": "totalPayment"
		},
		{
			"name": "totalInterest"
		},
		{
			"name": "totalFees"
		},
		{
			"name": "apr"
		},
		{
			"name": "steps"
		}
	],
	"defaults": {
		"loanAmount": 10000,
		"interestRate": 12,
		"loanTerm": 3,
		"originationFee": 1
	},
	"isEnabled": true
}

