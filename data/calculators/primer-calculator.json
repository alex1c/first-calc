{
  "id": "primer-calculator",
  "slug": "primer-calculator",
  "category": "construction",
  "engine": "function",
  "calculationId": "calculatePrimer",
  "tags": ["primer", "primer-calculator", "wall-primer", "surface-preparation"],
  "inputs": [
    {
      "name": "surfaceArea",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": 0.1
    },
    {
      "name": "surfaceCondition",
      "type": "select",
      "options": [
        { "value": "smooth", "label": "Smooth (painted, sealed)" },
        { "value": "porous", "label": "Porous (plaster, drywall)" },
        { "value": "rough", "label": "Rough (concrete, brick)" }
      ],
      "defaultValue": "smooth"
    },
    {
      "name": "primerCoverage",
      "type": "number",
      "min": 0,
      "max": 1000,
      "step": 0.1
    },
    {
      "name": "primerCoats",
      "type": "number",
      "min": 1,
      "max": 3,
      "step": 1,
      "defaultValue": 1
    },
    {
      "name": "unit",
      "type": "select",
      "options": [
        { "value": "meters", "label": "Meters (m²)" },
        { "value": "feet", "label": "Feet (ft²)" }
      ],
      "defaultValue": "meters"
    },
    {
      "name": "includeWaste",
      "type": "select",
      "options": [
        { "value": "false", "label": "No" },
        { "value": "true", "label": "Yes" }
      ],
      "defaultValue": "false"
    },
    {
      "name": "wasteMargin",
      "type": "number",
      "min": 5,
      "max": 20,
      "step": 1,
      "defaultValue": 10,
      "visibleIf": {
        "field": "includeWaste",
        "value": "true"
      }
    }
  ],
  "outputs": [
    {
      "name": "primerRequired"
    },
    {
      "name": "primerRequiredFormatted"
    },
    {
      "name": "primerPerCoat"
    },
    {
      "name": "primerPerCoatFormatted"
    },
    {
      "name": "primerRequiredWithWaste"
    },
    {
      "name": "primerRequiredWithWasteFormatted"
    },
    {
      "name": "primerRequiredAlternative"
    },
    {
      "name": "primerRequiredAlternativeFormatted"
    },
    {
      "name": "alternativeUnit"
    },
    {
      "name": "explanation"
    },
    {
      "name": "cansEstimate"
    },
    {
      "name": "surfaceCondition"
    }
  ],
  "defaults": {
    "surfaceArea": 20,
    "surfaceCondition": "smooth",
    "primerCoats": 1,
    "unit": "meters",
    "includeWaste": "false",
    "wasteMargin": 10
  },
  "relatedIds": ["wall-area-calculator", "putty-calculator", "paint-calculator"],
  "isEnabled": true
}

