    "slabLength": 6,
    "slabWidth": 4,
    "barDiameter": "12",
    "spacing": 200,
    "layers": "1",
    "edgeAllowance": 50,
    "unit": "meters",
    "includeWaste": "false",
    "wasteMargin": 5
