    {
      "name": "lengthBars2"
    },
    {
      "name": "totalLengthPerLayer"
    },
    {
      "name": "totalLength"
    },
    {
      "name": "totalLengthWithWaste"
    },
    {
      "name": "totalWeight"
    },
    {
      "name": "totalWeightWithWaste"
    },
    {
      "name": "formula"
    },
    {
      "name": "breakdown"
    },
    {
      "name": "explanation"
    }
