{
  "id": "sand-calculator",
  "slug": "sand-calculator",
  "category": "construction",
  "engine": "function",
  "calculationId": "calculateSand",
  "tags": ["sand", "sand-calculator", "construction-materials", "concrete"],
  "inputs": [
    {
      "name": "concreteVolume",
      "type": "number",
      "min": 0,
      "max": 1000000000,
      "step": "any"
    },
    {
      "name": "mixRatio",
      "type": "select",
      "options": [
        { "value": "1:2:4", "label": "1:2:4 (Concrete - Standard)" },
        { "value": "1:3:6", "label": "1:3:6 (Concrete - Lean Mix)" },
        { "value": "1:3", "label": "1:3 (Masonry Mortar)" },
        { "value": "custom", "label": "Custom" }
      ],
      "defaultValue": "1:2:4"
    },
    {
      "name": "customMixRatio",
      "type": "text",
      "visibleIf": {
        "field": "mixRatio",
        "value": "custom"
      }
    },
    {
      "name": "sandDensity",
      "type": "number",
      "min": 1000,
      "max": 2000,
      "step": 10,
      "defaultValue": 1600
    },
    {
      "name": "unit",
      "type": "select",
      "options": [
        { "value": "meters", "label": "Meters (m³)" },
        { "value": "feet", "label": "Feet (ft³)" }
      ],
      "defaultValue": "meters"
    },
    {
      "name": "includeWaste",
      "type": "select",
      "options": [
        { "value": "false", "label": "No" },
        { "value": "true", "label": "Yes" }
      ],
      "defaultValue": "false"
    },
    {
      "name": "wasteMargin",
      "type": "number",
      "min": 5,
      "max": 20,
      "step": 1,
      "defaultValue": 10,
      "visibleIf": {
        "field": "includeWaste",
        "value": "true"
      }
    }
  ],
  "outputs": [
    {
      "name": "sandWeight"
    },
    {
      "name": "sandWeightWithWaste"
    },
    {
      "name": "sandVolume"
    },
    {
      "name": "sandVolumeWithWaste"
    },
    {
      "name": "sandWeightTons"
    },
    {
      "name": "sandWeightTonsWithWaste"
    },
    {
      "name": "formula"
    },
    {
      "name": "explanation"
    },
    {
      "name": "mixRatio"
    },
    {
      "name": "mixType"
    },
    {
      "name": "sandDensity"
    }
  ],
  "defaults": {
    "concreteVolume": 1,
    "mixRatio": "1:2:4",
    "sandDensity": 1600,
    "unit": "meters",
    "includeWaste": "false",
    "wasteMargin": 10
  },
  "relatedIds": ["concrete-volume-calculator", "cement-calculator", "gravel-calculator", "concrete-mix-ratio-calculator"],
  "isEnabled": true
}

